{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/app.js" },  
    { "source": "/(.*)", "destination": "/client/public/index.html" } 
  ],
  "builds": [
    { "src": "server/app.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/build" } }
  ]
}
